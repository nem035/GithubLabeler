@import "yeticss"

header
  padding-top: 50px

@keyframes fadeIn {
  from {
    opacity: 0
  }
  to {
    opacity:1
  }
}

.fade-in
  opacity: 0
  animation: fadeIn ease-in 1;
  animation-duration: 0.5s;
  animation-fill-mode: forwards;

.label
  height: 40px
  margin: 5px 0

  .label-color
    width: 24px
    height: 24px
    border: 1px solid grey
    border-radius: 20px
    display: inline-block

  > span
    margin-left: 10px
    margin-right: 10px

  .octicon:hover
    cursor: pointer
    opacity: 0.8

  input
    padding: 7px
    border-radius: 3px
    border: 1px solid #e3e3e3
    outline: none
    margin: 0px 5px
    height: 100%
    &:focus
      border-color: #00b0e9

  button
    margin: 0 3px
    padding-left: 10px
    padding-right: 10px
    height: 100%
    position: relative
    bottom: 2px
